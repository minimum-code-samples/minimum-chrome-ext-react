{
	"compilerOptions": {
		"composite": true,
		"skipLibCheck": true,
		"module": "ESNext",
		"moduleResolution": "bundler",
		"jsx": "react-jsx",
		"paths": {
			"~src/*": ["./src/*"],
			"~assets/*": ["./src/assets/*"],
			"~pages/*": ["./src/pages/*"],
			"~public/*": ["./src/public/*"]
		},
		"allowSyntheticDefaultImports": true
	},
	"include": ["vite.config.ts", "src", "scripts", "plugins"]
}
